# Farm2Market Environment Variables Template
# Copy this file to .env and fill in your actual values

# Django Settings
DJANGO_SECRET_KEY=your-super-secret-key-here-change-this-in-production
DJANGO_DEBUG=False
DJANGO_SETTINGS_MODULE=farm2market_backend.settings_production

# Database Configuration
DB_NAME=farmtomarket
DB_USER=root
DB_PASSWORD=your-mysql-password
DB_HOST=localhost
DB_PORT=3306

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@farm2market.com

# Redis Configuration (for caching)
REDIS_URL=redis://127.0.0.1:6379/1

# Security Settings
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# File Upload Settings
MAX_FILE_SIZE=5242880

# API Rate Limiting
ANON_RATE_LIMIT=100/hour
USER_RATE_LIMIT=1000/hour
